<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.page.properties,cq.wcm.msm.properties]"
    helpPath="https://www.adobe.com/go/aem_cmp_page_v1"
    mode="edit">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                	<herobanner
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Hero Banner"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">                  
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Hero Banner"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <desktopasset
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}true"
                                                class="cq-droptarget"
                                                fieldLabel="Desktop Image/Video"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./desktopReference"
                                                mimeTypes="[image,video]"
                                                multiple="{Boolean}false"
                                                name="./desktopAsset"
                                                title="Upload Image or Video"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"
                                                rootPath="/content/dam"/>
                                            <mobileimage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Mobile Image"
                                                fileNameParameter="./mobileImage"
                                                fileReferenceParameter="./imageReference"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"
                                                name="./imageFile"
                                                title="Upload Image"
                                                uploadUrl="${suffix.path}"
                                                rootPath="/content/dam"
                                                useHTML5="{Boolean}true"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Title of the hero banner"
                                                fieldLabel="Title"
                                                required="{Boolean}true"
                                                name="./title"/>
                                            <redlinktitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Title of the red link (1st link)"
                                                fieldLabel="Red Link Title"
                                                name="./redLinkTitle"/>
                                            <redlinkpath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Path of the red link (1st link)"
                                                fieldLabel="Red Link Path"
                                                name="./redLinkPath"
                                                rootPath="/content"/>
                                             <whitelinktitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Title of the white link (2nd link)"
                                                fieldLabel="White Link Title"
                                                name="./whiteLinkTitle"/>
                                            <whitelinkpath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Path of the white link (2nd link)"
                                                fieldLabel="White Link Path"
                                                name="./whiteLinkPath"
                                                rootPath="/content"/>
                                        </items>
                                    </title>
                                </items>
                            </column>
                        </items>
                    </herobanner>
                    <header
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Header"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <switchpath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldLabel="Switch Path"
                                        name="./switchPath"
                                        rootPath="/content/taylorsuniversity"/>
                                    <switchtext
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Switch Text"
                                        name="./switchText"/>
                                    <logoimage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldLabel="Logo Image"
                                        fileNameParameter="./fileName"
                                        fileReferenceParameter="./fileReference"
                                        mimeTypes="[image]"
                                        multiple="{Boolean}false"
                                        name="./logoImage"
                                        title="Logo Image"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"
                                        allowUpload="{Boolean}false"/>
                                    <logotitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Logo Title"
                                        name="./logoTitle"/>
                                    <searchresultspagepath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldLabel="Search Results Page Path"
                                        name="./searchResultsPagePath"
                                        rootPath="/content/taylorsuniversity"/>
                                    <loginpagepath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldLabel="Login Page Path"
                                        name="./loginPagePath"
                                        rootPath="/content/taylorsuniversity"/>
                                </items>
                            </columns>
                        </items>
                    </header>
                    <navigation
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Navigation"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <navigationsections
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="Navigation Sections">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            name="./navigationSections">
                                            <items jcr:primaryType="nt:unstructured">
                                                <sectionpath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Section Path"
                                                    name="./sectionPath"
                                                    rootPath="/content/taylorsuniversity"/>
                                                <showcoursesearch
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./showCourseSearch"
                                                    text="Show Course Search"
                                                    value="yes"/>
                                            </items>
                                        </field>
                                    </navigationsections>
                                </items>
                            </columns>
                        </items>
                    </navigation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
