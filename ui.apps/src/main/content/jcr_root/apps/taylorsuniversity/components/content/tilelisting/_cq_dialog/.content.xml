<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tile Listing"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tilelisting
                jcr:primaryType="nt:unstructured"
                jcr:title="Tile Listing"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displaystyle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Display Style"
                                name="./displayStyle">
                                <items jcr:primaryType="nt:unstructured">
                                    <select
                                        jcr:primaryType="nt:unstructured"
                                        text="--Select--"
                                        value="select"/>
                                    <tiles
                                        jcr:primaryType="nt:unstructured"
                                        text="Tiles"
                                        value="tiles"/>
                                    <stats
                                        jcr:primaryType="nt:unstructured"
                                        text="Stats"
                                        value="stats"/>
                                </items>
                            </displaystyle>
                            <tiles
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                fieldDescription="Click '+' to add a a new tile"
                                fieldLabel="Tiles">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested=""
                                    name="./tileListing">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <image
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldDescription="Add the image for tile"
                                                    fieldLabel="Image"
                                                    name="./image"
                                                    rootPath="/content/dam/taylorsuniversity"/>
                                                <alttext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter alt text for the image"
                                                    fieldLabel="Image Alt Text"
                                                    name="./altText"/>
                                                <title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter the title for tile"
                                                    fieldLabel="Title"
                                                    name="./title"/>
                                                <titlelink
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldDescription="configure url for the title image"
                                                    fieldLabel="Title Link"
                                                    name="./titleLink"
                                                    rootpath="/content/taylorsuniversity"/>
                                                <description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                    fieldDescription="Enter the description for tile"
                                                    fieldLabel="Description"
                                                    name="./description"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </tiles>
                        </items>
                    </column>
                </items>
            </tilelisting>
        </items>
    </content>
</jcr:root>
